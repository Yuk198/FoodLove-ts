<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head') %>

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="./css/admin.css">

	<title>FoodLove♥</title>
</head>
<body>

		<%- include ('../partials/hadmin') %>

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
			</div>

			<ul class="box-info">
				<li>
					<i class='bx bxs-food-menu' ></i>
					<span class="text">
						<h3><%= menutotal %></h3>
						<p>Số lượng món ăn</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-notepad' ></i>
					<span class="text">
						<h3><%= billtotal %></h3>
						<p>Số lượng hóa đơn</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3><%= sumtotal %>đ</h3>
						<p>Tổng doanh thu</p>
					</span>
				</li>
			</ul>


			
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
	
</body>
</html>