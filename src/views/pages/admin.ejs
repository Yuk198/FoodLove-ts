	<!-- My CSS -->
	<link rel="stylesheet" href="./css/admin.css">

	<title>FoodLove♥</title>
</head>
<body>

		<%- include ('../partials/hadmin') %>

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
			</div>

			<ul class="box-info">
				<li>
					<i class='bx bxs-food-menu' ></i>
					<span class="text">
						<h3>20</h3>
						<p>Menu</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-notepad' ></i>
					<span class="text">
						<h3>24</h3>
						<p>Order</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
