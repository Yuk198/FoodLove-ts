<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head') %>

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
	<!-- My CSS -->
	<link rel="stylesheet" href="/css/bill.css">

	<title>FoodLove♥</title>
</head>
<body>
        <%- include ('../partials/hadmin') %>
        <!--MAIN-->
        <main>
            <div class="records table-responsive">

                <div class="record-header">
                    <div class="add">
                        <span></span>
                        <select name="" id="">
                            <option value="">ID</option>
                        </select>
                        <button>Add record</button>
                    </div>
    
                    <div class="browse">
                        <input type="search" placeholder="Search" class="bx bx-search">
                         <div>
                         <a href="#"><i class="bx bx-plus"></i></a> 
                         </div>
                    </div>
                </div>
    
                <div>
                    <table width="100%">
                        <thead>
                            <tr>
                                <th>Mã đơn</th>
                                <th><span class="las la-sort"></span> Tên khách hàng</th>
                                <th><span class="las la-sort"></span> Ngày trả</th>
                                <th><span class="las la-sort"></span> Trạng thái<i></i></th>
                                <th><span class="las la-sort"></span> Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bills.forEach((bills) => {%>
                            <tr>
                                <td><%= bills.id_bill %></td>
                                <td>
                                    <div class="client" >
                                        <img src="/img/cm.jpg">
                                            <h4> Bình</h4>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <%= bills.date %>
                                </td>
                                <td><span class="status completed">Đã thanh toán</span></td>
                                <td>
                                    <div class="actions">
                                        <span class="las la-eye"></span>
                                        <span class="bx bx-trash"></span>
                                        <span class="bx bx-pencil"></span>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                            
                        </tbody>
                    </table>
                </div>
    
            </div>
        
        </div>
        </main>
    </section>   
    
</body>
</html>