{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "target": "ES2020",
      "outDir": "dist",
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "./src",
      "paths": {
        "~/*": ["src/*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
    "files": ["src/type.d.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
 }
 